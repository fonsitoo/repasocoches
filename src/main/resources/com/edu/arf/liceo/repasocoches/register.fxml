<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.edu.arf.liceo.repasocoches.controller.RegisterController">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
    </padding>

    <Label text="Crear Nueva Cuenta" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtUser" promptText="Nombre de usuario" maxWidth="200" />
    <PasswordField fx:id="txtPass" promptText="Contraseña" maxWidth="200" />
    <PasswordField fx:id="txtConfirmPass" promptText="Repite la contraseña" maxWidth="200" />

    <Button text="Registrarse" onAction="#onRegisterAction" maxWidth="200" />

    <Hyperlink text="¿Ya tienes cuenta? Inicia sesión" onAction="#onGoToLoginAction" />

</VBox>