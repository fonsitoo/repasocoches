<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.edu.arf.liceo.repasocoches.controller.LoginController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
    </padding>
    <Label text="Bienvenido a mi App de Coches" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtUser" promptText="Nombre de usuario" maxWidth="200"/>
    <PasswordField fx:id="txtPass" promptText="Contraseña" maxWidth="200"/>

    <Button text="Iniciar Sesión" onAction="#onLoginAction" maxWidth="200"/>

    <HBox alignment="CENTER" spacing="5.0">
        <Label text="¿No tienes cuenta?"/>
        <Hyperlink text="Regístrate aquí" onAction="#onRegisterLinkAction"/>
    </HBox>
</VBox>